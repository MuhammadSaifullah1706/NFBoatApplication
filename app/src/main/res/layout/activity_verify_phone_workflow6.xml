<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workflow6.VerifyPhoneWorkflow6Activity"
    android:background="@color/pin_background"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:background="@color/pin_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="26dp"
            android:contentDescription="@string/ok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/backicon_black" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_semibold"
            android:gravity="center"
            android:text="Vérifier mon téléphone"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressIndicator"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="10dp"
            android:layout_marginTop="16dp"
            android:elevation="@dimen/_10sdp"
            android:progress="80"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:trackCornerRadius="70dp"
            app:trackThickness="6dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/font_regular"
            android:gravity="center_horizontal"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:text="Veuillez saisir le numéro à 4 chiffres que nous avons envoyé à votre téléphone"
            android:textColor="@color/simple_black"
            app:layout_constraintEnd_toEndOf="@+id/progressIndicator"
            app:layout_constraintStart_toStartOf="@+id/progressIndicator"
            app:layout_constraintTop_toBottomOf="@+id/progressIndicator" />


    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llPinCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundImage"
        app:layout_constraintVertical_bias="0.501">

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:background="@drawable/white_square"
            android:clickable="true"
            android:inputType="numberPassword"
            android:enabled="true"
            android:fontFamily="@font/font_bold"
            android:gravity="center"
            android:lines="1"
            android:maxLength="1"
            android:textColor="@color/app_colour"
            android:textColorHint="@color/app_colour"
            android:textSize="@dimen/_18sdp"
            tools:ignore="HardcodedText"
            android:focusable="true" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_weight="1"
            android:background="@drawable/white_square"
            android:clickable="true"
            android:enabled="true"
            android:fontFamily="@font/font_bold"
            android:gravity="center"
            android:inputType="numberPassword"
            android:lines="1"
            android:maxLength="1"
            android:textColor="@color/app_colour"
            android:textColorHint="@color/app_colour"
            android:textSize="@dimen/_18sdp"
            tools:ignore="HardcodedText"
            android:focusable="true" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_weight="1"
            android:background="@drawable/white_square"
            android:clickable="true"
            android:enabled="true"
            android:fontFamily="@font/font_bold"
            android:gravity="center"
            android:inputType="numberPassword"
            android:lines="1"
            android:maxLength="1"
            android:textColor="@color/app_colour"
            android:textColorHint="@color/app_colour"
            android:textSize="@dimen/_18sdp"
            tools:ignore="HardcodedText"
            android:focusable="true" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_weight="1"
            android:background="@drawable/white_square"
            android:clickable="true"
            android:enabled="true"
            android:fontFamily="@font/font_bold"
            android:gravity="center"
            android:inputType="numberPassword"
            android:lines="1"
            android:maxLength="1"
            android:textColor="@color/app_colour"
            android:textColorHint="@color/app_colour"
            android:textSize="@dimen/_18sdp"
            tools:ignore="HardcodedText"
            android:focusable="true" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/app_colour"
        android:fontFamily="@font/font_semibold"
        android:text="Renvoyer le code"
        android:textColor="@color/white"
        android:textSize="@dimen/small_textsize"
        app:cornerRadius="26dp"
        app:layout_constraintBottom_toTopOf="@+id/clPinCode2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llPinCode"
        app:layout_constraintVertical_bias="0.75" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPinCode2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/button1PinCode"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:layout_marginTop="32dp"
            android:src="@drawable/btn1"
            app:layout_constraintEnd_toStartOf="@+id/button2PinCode"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/button2PinCode"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/btn2"
            app:layout_constraintEnd_toStartOf="@+id/button3PinCode"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button1PinCode"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/button3PinCode"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/btn3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button2PinCode"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/button4PinCode"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:layout_marginTop="32dp"
            android:src="@drawable/btn4"
            app:layout_constraintEnd_toEndOf="@+id/button1PinCode"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/button1PinCode"
            app:layout_constraintTop_toBottomOf="@+id/button1PinCode" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/button5PinCode"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/btn5"
            app:layout_constraintEnd_toStartOf="@+id/button6PinCode"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toEndOf="@+id/button4PinCode"
            app:layout_constraintTop_toBottomOf="@+id/button2PinCode" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/button6PinCode"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/btn6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button5PinCode"
            app:layout_constraintTop_toBottomOf="@+id/button3PinCode" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/button7PinCode"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:layout_marginTop="32dp"
            android:src="@drawable/btn7"
            app:layout_constraintEnd_toEndOf="@+id/button4PinCode"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/button4PinCode"
            app:layout_constraintTop_toBottomOf="@+id/button4PinCode" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/button8PinCode"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/btn8"
            app:layout_constraintEnd_toStartOf="@+id/button9PinCode"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button7PinCode"
            app:layout_constraintTop_toBottomOf="@+id/button5PinCode" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/button9PinCode"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/btn9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button8PinCode"
            app:layout_constraintTop_toBottomOf="@+id/button6PinCode" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/button0PinCode"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:layout_marginTop="32dp"
            android:src="@drawable/btn0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button8PinCode"
            app:layout_constraintStart_toStartOf="@+id/button8PinCode"
            app:layout_constraintTop_toBottomOf="@+id/button8PinCode" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgClearPinCode"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/btn_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button9PinCode"
            app:layout_constraintHorizontal_bias="0.83"
            app:layout_constraintStart_toStartOf="@+id/button9PinCode"
            app:layout_constraintTop_toBottomOf="@+id/button9PinCode" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>