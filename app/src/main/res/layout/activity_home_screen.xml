<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pin_background"
    tools:context=".activity.HomeScreenActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchHomeScreen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/homeround_background"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/search"
            android:contentDescription="@string/ok" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/font_semibold"
            android:gravity="center"
            android:hint="@string/rechercher_un_bateau"
            android:textSize="@dimen/medium_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchHomeScreen"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="8dp"
                android:background="@drawable/image1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.09"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginStart="12dp"
                android:background="@drawable/image2"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView2"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="8dp"
                android:background="@drawable/image3"
                app:layout_constraintEnd_toEndOf="@+id/appCompatImageView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/appCompatImageView"
                app:layout_constraintTop_toBottomOf="@id/appCompatImageView" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginStart="12dp"
                android:background="@drawable/image4"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView2"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView2"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView2" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/font_regular"
                android:gravity="center"
                android:textColor="@color/dull_black"
                android:text="@string/notre_s_l_ction"
                android:textSize="@dimen/small_textsize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/app_background_round"
                android:fontFamily="@font/font_semibold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/poster_une_annonce"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/font_regular"
                android:gravity="center"
                android:text="@string/la_m_t_o_a_marseille"
                android:textSize="@dimen/small_textsize"
                android:textColor="@color/dull_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appCompatImageView2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sunConstraint"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:layout_margin="@dimen/_12sdp"
                android:background="@drawable/sunbg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView1">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView3"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/sun"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_semibold"
                    android:gravity="center"
                    android:text="@string/marseille"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_size"
                    app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView3"
                    app:layout_constraintEnd_toStartOf="@+id/appCompatImageView3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/appCompatImageView3"
                    app:layout_constraintVertical_bias="0.254" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/font_regular"
                    android:gravity="center"
                    android:text="@string/vent_18km_h"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_textsize"
                    app:layout_constraintEnd_toEndOf="@+id/textView7"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@id/textView7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_bold"
                    android:text="@string/_25"
                    android:textColor="@color/app_colour"
                    android:textSize="50sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.813"
                    app:layout_constraintStart_toEndOf="@+id/appCompatImageView3"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_12sdp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sunConstraint"
                app:layout_constraintVertical_bias="0.0">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_95sdp"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:background="@drawable/sunbg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center"
                            android:text="@string/lun"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_textsize" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:src="@drawable/sun_cloudy" />

                        <TextView
                            android:id="@+id/textVie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_semibold"
                            android:gravity="center"
                            android:text="@string/_25"

                            android:textColor="@color/black"

                            android:textSize="@dimen/large_sizetext" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_95sdp"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:background="@drawable/sunbg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/texView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_semibold"
                            android:gravity="center"
                            android:text="@string/mar"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_textsize" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:src="@drawable/cloudy_weather" />

                        <TextView
                            android:id="@+id/textVi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_semibold"
                            android:gravity="center"
                            android:text="@string/_15"
                            android:textColor="@color/black"
                            android:textSize="@dimen/large_sizetext" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_95sdp"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:background="@drawable/sunbg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textVe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_semibold"
                            android:gravity="center"
                            android:text="@string/mer"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_textsize" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/raining" />

                        <TextView
                            android:id="@+id/texVie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_semibold"
                            android:gravity="center"
                            android:text="@string/_18"
                            android:textColor="@color/black"

                            android:textSize="@dimen/large_sizetext" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_95sdp"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:background="@drawable/sunbg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textew8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center"
                            android:text="@string/jeu"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_textsize" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:src="@drawable/sun" />

                        <TextView
                            android:id="@+id/xtVie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_semibold"
                            android:gravity="center"
                            android:text="@string/_19"
                            android:textColor="@color/black"

                            android:textSize="@dimen/large_sizetext" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_95sdp"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:background="@drawable/sunbg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textVw8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center"
                            android:text="@string/ven"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_textsize" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:src="@drawable/cloudy_weather" />

                        <TextView
                            android:id="@+id/txtVie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_semibold"
                            android:gravity="center"
                            android:text="@string/_33"
                            android:textColor="@color/black"

                            android:textSize="@dimen/large_sizetext" />


                    </LinearLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>